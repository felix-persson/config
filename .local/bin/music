#!/bin/sh

# Shows music information.

pidof -x mpd-update >/dev/null 2>&1 || mpd-update >/dev/null 2>&1 &

filter() {
	sed "/^volume:/d;
	    s/\\&/\&/g;
	    s/\\[paused\\].*/â¸/g;
	    s/\\[playing\\].*/ğŸµ/g;
	    /^ERROR/Q" |
	tac |
	paste -sd ' ' -
}

status=$(mpc status | filter)

[ -z $status ] && echo "ğŸ’¤ Not playing" || echo $status
